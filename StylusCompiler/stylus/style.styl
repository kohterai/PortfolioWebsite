darkerblack = #7C7C7C
lighterblack = #9D9D9D
lightestGray = #CFCFCF
evenLighterGray = #EDEDED
blue = #81A8C5

body
  font-family: Lato
  color: blue
  height 100%
  margin 0
  -webkit-font-smoothing: subpixel-antialiased

html
  height 100%

#container
  max-width: 1000px
  margin-left: auto
  margin-right: auto
  padding: 30px 40px
  
.clear
  clear both

ul
  list-style-type: none

a
  text-decoration: none

li
  cursor pointer

//Mode select screen
#selectMode
  height 50%
  margin auto
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  text-align center
  #modeSelectTitle
    font-weight 300
    font-size 3em
  .modeSelectButton
    margin 60px 40px
    display inline-block
  .modeLabel
    font-size 1.3em
  .circularPhoto
    transition: all 0.2s ease-out;


.circularPhoto
  height:200px

.circular
  overflow: hidden
  border-radius: 100%
  background-size: cover
  background-position: center
  background-repeat: no-repeat


//Project title
h2
  margin: -10px
  font-size 3em
  font-weight: 700

//Subheading for Project titles
h3
  margin: 0px 0px 0px 0px
  font-size: 1.2em
  font-weight: 300
  color darkerblack

//For "Skills" "contact" etc headers inside projects
h4
  margin: 50px 0px 8px 0px
  font-weight: 600
  font-size 1.4em
  
h5
  margin: 0px
  font-weight: 300

p
  font-weight: 300
  color: lighterblack

//******GENERAL USE STYLING******//


//******FOR THE PROJECTS MENU******//  
.menuList
  width: 20%
  padding: 0px
  margin: 0px
  margin-right: 30px
  display: inline-block
  vertical-align:top
  position fixed
  top 22%

#menuKohHeading
  font-size 1.7em
  font-weight 200
  position: fixed
  top 15%
  .active
    color blue
  a
    &:hover
      color blue
  
#projectHeading
  color blue
  margin-bottom 10px
  font-weight 300
  font-size 1.2em

a
  color lightestGray
  font-weight 200
  line-height 1.8em
  font-size 1.1em
  transition: color 0.1s linear;
  &:hover
    color #9D9D9D
  &.active
    color darkerblack 

//position set to absolute so doesnt cause problems when we set display to none
#projectMenuCirlce
  opacity 0
  position: absolute;
  background-color: blue;
  border-radius: 50%;
  width: 10px;
  height:10px;
  transition: all 0.2s ease-out;
  
.projectDetail
  float: right
  width: 80%
  display: inline-block
  vertical-align:top
  text-align center
  min-height 1000px
  .bottomMargin
    margin-bottom 40px
  img
    margin 10px 0px
  
#projectsFooter
  padding 0px 30px
  margin-top 100px
  margin-bottom 70px
  padding-top 20px
  border-top: 1px solid evenLighterGray;
  color lighterblack
  font-weight 300
  i
    margin-right 10px

//****FOR PROJECTS*****//
#projectElements
  width 100%

.blue
  color blue

.circularPhotoSmall
  height:150px

//thin line to be placed between projects for MISC
.dividerLine
  border-top: 1px solid evenLighterGray;
  margin 60px

//When we dont want text etc to span the whole width of project display area
.narrowSection
  max-width: 800px
  margin-right auto
  margin-left auto

.smallMargin
  margin 5px 0px
  
td
  width 500px
  color lighterblack
  font-weight 300

#DiplomatLayout
  .halfWidth
    width 49%
//*****FOR IMAGE MANIPULATION FOR PROJECT DETAILS*****//
.left
  float left

.right
  float right

.fullWidth
  width 100%

.halfWidth
  width 48%
  display inline-block

.thirdWidth
  width 31%
  display inline-block

.thinBorder
  border-style solid
  border-color lightestGray
  border-width 1px

.center
  margin 15px 0px
  display flex
  justify-content center

//our buttons for accessing code, page, etc
.button
  border 1px solid lightestGray
  border-radius 5px
  text-decoration: none
  color lightestGray
  padding 10px 20px
  margin 0 10px
  transition: color 0.1s linear;
  &:hover
    color darkerblack
    border-color darkerblack
  i
    margin-right 8px
  

//WHALE//
.fixed
  position: fixed
  top: 20px
  margin-right 20%
  background-color: #0f0 ! important
  
#whale{
  width:100%;
  bottom: 0;
  position: fixed;
  left: 0;
  -webkit-animation: whaleAni 5s linear 0s infinite alternate-reverse; /* Chrome, Safari, Opera */
}

/* Chrome, Safari, Opera */
@-webkit-keyframes whaleAni {
    0%   {left:0px; bottom:0px;}
    25%  {left:-20px; bottom:-20px;}
    50%  {left:-50px; bottom:-25px;}
    75%  {left:-30px; bottom:-30px;}
    100% {left:-20px; bottom:-10px;}
}
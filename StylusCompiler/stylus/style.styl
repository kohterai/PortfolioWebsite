body
  font-family: Source Sans Pro
  color: #3C8DA6
  padding-top 30px

#container
  max-width: 900px
  margin-left: auto
  margin-right: auto

ul
  list-style-type: none

li
  cursor pointer

//Project title
h2
  margin: 0px
  font-weight: 700

//"Projects" and "Skills" heading
h3
  margin: 0px 0px 0px 0px
  font-size: 1.5em
  font-weight: 300

h4
  margin: 5px 0px 0px 0px
  font-weight: 600
  font-size 1.4em

h5
  margin: 0px
  font-weight: 300

p
  font-weight: 300

.skillTable
  font-weight: 300

.orangeBox 
  background-color: orange
  height: 200px
  width: 100%


.blueBox
  background-color: blue
  height: 200px
  width: 100%
  
.menuList
  width: 20%
  padding: 0px
  margin: 0px
  margin-right: 30px
  display: inline-block
  vertical-align:top
  
.projectDetail
  width: 70%
  display: inline-block
  vertical-align:top

.skillTable
  margin-bottom: 40px

.fullWidth
  width 100%

.halfWidth
  width 49.4%
  display inline-block
  
.thinBorder
  border-style solid
  border-color #CFCFCF
  border-width 1px

.center
  margin 15px 0px
  display flex
  justify-content center

.button
  border 1px solid #CFCFCF
  border-radius 5px
  text-decoration: none
  color #CFCFCF
  padding 10px 20px
  margin 0 10px
  transition: color 0.1s linear;
  &:hover
    color #7C7C7C
    border-color #7C7C7C
  
#kohTitle
  display inline-block
  font-size 2em
  font-weight 300
  margin-right 5px
  
#modeTitle
  display inline-block
  font-weight 300
  font-size 1.4em